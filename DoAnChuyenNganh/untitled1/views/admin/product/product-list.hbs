<div class="container mt-4">
    <h2 class="text-center text-danger mb-4 text-uppercase">
        Danh sách xe
    </h2>

    <div class="card shadow border-0 rounded-3">
        <div class="card-body">

            <a href="/admin/product/create-product" class="btn btn-success mb-3">
                ➕ Thêm xe
            </a>

            <table class="table table-bordered table-hover align-middle text-center">
                <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Hình ảnh</th>
                    <th>Tên xe</th>
                    <th>Danh mục</th>
                    <th>Giá</th>
                    <th>Trạng thái</th>
                    <th>Hành động</th>
                </tr>
                </thead>

                <tbody>
                <p style="color:red">Số lượng products: {{products.length}}</p>

                {{#each products}}
                    <tr>
                        <td>{{ @index}}</td>

                        <td>
                            {{#if this.image}}
                                <img src="{{this.image}}" width="90" class="rounded">
                            {{else}}
                                Không có ảnh
                            {{/if}}
                        </td>

                        <td>{{this.name}}</td>

                        <td>
                            {{#if this.category}}
                                {{this.category.name}}
                            {{else}}
                                —
                            {{/if}}
                        </td>

                        <td>{{this.price}}</td>

                        <td>
                            {{#if this.status}}
                                <span class="badge bg-success">Hiển thị</span>
                            {{else}}
                                <span class="badge bg-secondary">Ẩn</span>
                            {{/if}}
                        </td>

                        <td>
                            <a href="/admin/product/edit-product/{{this._id}}"
                               class="btn btn-sm btn-warning">
                                Sửa
                            </a>

                            <form action="/admin/product/delete/{{this._id}}?_method=DELETE"
                                  method="POST"
                                  style="display:inline">
                                <button class="btn btn-sm btn-danger"
                                        onclick="return confirm('Xóa xe này?')">
                                    Xóa
                                </button>
                            </form>
                        </td>
                    </tr>
                {{/each}}

                {{#unless products.length}}
                    <tr>
                        <td colspan="7">❌ Chưa có xe nào</td>
                    </tr>
                {{/unless}}
                </tbody>
            </table>
        </div>
    </div>
</div>
