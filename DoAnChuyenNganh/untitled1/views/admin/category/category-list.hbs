                        <button class="btn btn-warning btn-sm me-1" onclick="openEditModal(this)">Sửa</button>
                        <button class="btn btn-danger btn-sm" onclick="deleteRow(this)">Xóa</button>
                    </td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>Aventador SVJ</td>
                    <td>Lamborghini</td>
                    <td>759</td>
                    <td>517770</td>
