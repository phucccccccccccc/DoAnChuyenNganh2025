<section class="content">
    <div class="container-fluid">

        <form method="post">

            <div class="form-group">
                <label>Tiêu đề</label>
                <input name="title"
                       class="form-control"
                       value="{{blog.title}}">
            </div>

            <div class="form-group">
                <label>Ảnh</label>
                <input name="image"
                       class="form-control"
                       value="{{blog.image}}">
            </div>

            <div class="form-group">
                <label>Mô tả</label>
                <textarea name="description"
                          class="form-control"
                          rows="4">{{blog.description}}</textarea>
            </div>

            <div class="form-group">
                <label>Tác giả</label>
                <input name="author"
                       class="form-control"
                       value="{{blog.author}}">
            </div>

            <div class="form-group">
                <label>Danh mục</label>
                <input name="category"
                       class="form-control"
                       value="{{blog.category}}">
            </div>

            <div class="form-check">
                <input type="checkbox"
                       name="status"
                       {{#if blog.status}}checked{{/if}}>
                <label>Hiển thị</label>
            </div>

            <button class="btn btn-primary mt-3">Cập nhật</button>

        </form>

    </div>
</section>
