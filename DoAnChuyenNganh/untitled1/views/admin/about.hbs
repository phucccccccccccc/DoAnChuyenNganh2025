<h3>Quản lý About</h3>

<form method="post" action="/admin/about/update">
    <div class="form-group">
        <label>Tiêu đề</label>
        <input class="form-control" name="title" value="{{about.title}}">
    </div>

    <div class="form-group">
        <label>Mô tả</label>
        <textarea class="form-control" name="description">{{about.description}}</textarea>
    </div>

    <div class="form-group">
        <label>Ảnh (URL)</label>
        <input class="form-control" name="image" value="{{about.image}}">
    </div>

    <div class="form-group">
        <label>Mission</label>
        <textarea class="form-control" name="mission">{{about.mission}}</textarea>
    </div>

    <div class="form-group">
        <label>Vision</label>
        <textarea class="form-control" name="vision">{{about.vision}}</textarea>
    </div>

    <button class="btn btn-primary">Lưu</button>
</form>
