<!-- Contact Section -->
<section class="contact spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="contact__text">
                    <div class="section-title">
                        <h2>Let’s Work Together</h2>
                        <p>To make requests for further information, contact us via our social channels.</p>
                    </div>
                    <ul>
                        <li><span>Weekday</span> 08:00 am to 18:00 pm</li>
                        <li><span>Saturday:</span> 10:00 am to 16:00 pm</li>
                        <li><span>Sunday:</span> Closed</li>
                    </ul>
                </div>
            </div>

            <div class="col-lg-6 col-md-6">
                <div class="contact__form">

                    <!-- ✅ FORM ĐÃ SỬA -->
                    <form action="/contact" method="POST">
                        <div class="row">
                            <div class="col-lg-6">
                                <input type="text" name="name" placeholder="Name" required>
                            </div>
                            <div class="col-lg-6">
                                <input type="email" name="email" placeholder="Email" required>
                            </div>
                        </div>

                        <input type="text" name="subject" placeholder="Subject" required>

                        <textarea name="message" placeholder="Your Question" required></textarea>

                        <button type="submit" class="site-btn">Submit Now</button>
                    </form>
                    <!-- ✅ END FORM -->

                </div>
            </div>
        </div>
    </div>
</section>

